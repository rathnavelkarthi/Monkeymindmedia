{
  "meta": {
    "brand_name": "Monkey Mind Media",
    "description": "Core design tokens for UI implementation. These are the single source of truth for all visual decisions."
  },
  "colors": {
    "primary": {
      "DEFAULT": "#7C3AED",
      "hover": "#6D28D9",
      "foreground": "#FFFFFF"
    },
    "accent": {
      "gold": "#F59E0B",
      "gold_hover": "#D97706",
      "purple_light": "#A78BFA"
    },
    "background": {
      "base": "#080808",
      "surface": "#111111",
      "card": "#161616",
      "card_hover": "#1E1E1E"
    },
    "foreground": {
      "primary": "#F9F9F9",
      "secondary": "#A1A1AA",
      "muted": "#52525B"
    },
    "border": {
      "DEFAULT": "rgba(255,255,255,0.08)",
      "focus": "rgba(124,58,237,0.6)"
    },
    "gradient": {
      "hero": "linear-gradient(135deg, #0D0D0D 0%, #1A0533 50%, #0D0D0D 100%)",
      "purple_glow": "radial-gradient(ellipse at center, rgba(124,58,237,0.3) 0%, transparent 70%)",
      "gold_glow": "radial-gradient(ellipse at center, rgba(245,158,11,0.2) 0%, transparent 70%)",
      "card_shine": "linear-gradient(135deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0) 100%)"
    },
    "destructive": "#EF4444",
    "success": "#10B981"
  },
  "typography": {
    "font_family_headings": ["Syne", "sans-serif"],
    "font_family_body": ["Inter", "sans-serif"],
    "font_weight_black": "900",
    "font_weight_bold": "700",
    "font_weight_semibold": "600",
    "font_weight_normal": "400",
    "scale": {
      "display": "clamp(3rem, 8vw, 7rem)",
      "h1": "clamp(2.5rem, 6vw, 5rem)",
      "h2": "clamp(1.75rem, 4vw, 3rem)",
      "h3": "clamp(1.25rem, 2.5vw, 1.75rem)",
      "body_lg": "1.125rem",
      "body": "1rem",
      "small": "0.875rem"
    },
    "line_height": {
      "tight": "1.1",
      "snug": "1.3",
      "normal": "1.6",
      "relaxed": "1.75"
    }
  },
  "ui": {
    "border_radius": {
      "small": "0.375rem",
      "default": "0.75rem",
      "large": "1.25rem",
      "pill": "9999px"
    },
    "spacing_base_unit": "4px",
    "shadow": {
      "card": "0 4px 24px rgba(0,0,0,0.4)",
      "glow_purple": "0 0 40px rgba(124,58,237,0.35)",
      "glow_gold": "0 0 40px rgba(245,158,11,0.25)"
    },
    "blur": {
      "glass": "blur(16px)",
      "backdrop": "blur(24px)"
    },
    "transition": {
      "fast": "150ms ease",
      "default": "300ms ease",
      "slow": "600ms ease"
    }
  }
}
